{
  "compilerOptions": {
    "outDir": "./dist/",
    "declaration": true,
    "strict": true,
    "moduleResolution": "nodenext",
    "lib": ["ESNext","DOM"],
    "target": "ES2015",
    "sourceMap": true
  },
  "include": ["./src"],
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true
  },
  "extends": ["@tsconfig/node-lts/tsconfig.json"]
}
